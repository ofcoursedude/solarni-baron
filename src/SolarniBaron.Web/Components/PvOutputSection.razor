@using SolarniBaron.Domain.BatteryBox.Models
@inherits BlazorState.BlazorStateComponent

<table class="table">
    <thead>
    <tr>
        <th class="col col-sm-6 col-md-5 col-lg-4 col-xl-3" scope="col">Název</th>
        <th scope="col">Hodnota</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>Výkon L1:</td>
        <td style="@Helpers.GetGradient(State.BatteryBoxStatus.PanelsOutputL1, 4800)">@Helpers.FormatMetric(State.BatteryBoxStatus.PanelsOutputL1, "W")</td>
    </tr>
    <tr>
        <td>Výkon L2:</td>
        <td style="@Helpers.GetGradient(State.BatteryBoxStatus.PanelsOutputL2, 4800)">@Helpers.FormatMetric(State.BatteryBoxStatus.PanelsOutputL2, "W")</td>
    </tr>
    <tr>
        <td>Výkon celkem:</td>
        <td style="@Helpers.GetGradient(State.BatteryBoxStatus.PanelsOutputL2 + State.BatteryBoxStatus.PanelsOutputL1, 9600)">@Helpers.FormatMetric(State.BatteryBoxStatus.PanelsOutputL2 + State.BatteryBoxStatus.PanelsOutputL1, "W")</td>
    </tr>
    <tr>
        <td>Výkon %:</td>
        <td style="@Helpers.GetGradient(State.BatteryBoxStatus.PanelsOutputPct, 100)">
            @State.BatteryBoxStatus.PanelsOutputPct%
        </td>
    </tr>
    </tbody>
</table>

@code {

    private AppState State => GetState<AppState>();


}